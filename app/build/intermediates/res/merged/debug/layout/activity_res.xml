<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_res"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_title" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/kuang_login"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_header" />

                <EditText
                    android:id="@+id/etResPhone"
                    style="@style/editStyle"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/ivResPhoneClear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_clear"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/kuang_login"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_verify" />

                <EditText
                    android:id="@+id/etResCode"
                    style="@style/editStyle"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/ivResCodeClear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_clear"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvResVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/tv_color1"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/kuang_login"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_pwd" />

                <EditText
                    android:id="@+id/etResPwd"
                    style="@style/editStyle"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/ivResPwdClear"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_clear"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivResPwdEye"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_eye_close" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/kuang_login"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_pwd" />

                <EditText
                    android:id="@+id/etResPwd2"
                    style="@style/editStyle"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/ivResPwdClear2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_clear"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivResPwdEye2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_eye_close" />

            </LinearLayout>

            <Button
                android:id="@+id/butRes"
                style="@style/butKuang"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:text="注册"
                android:textSize="16dp" />

            <Button
                android:id="@+id/butMind"
                style="@style/butMain"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="bottom"
                android:text="开通存管"
                android:textSize="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
