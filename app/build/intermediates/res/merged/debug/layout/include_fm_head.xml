<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_wight"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linFmTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--返回-->
        <ImageButton
            android:id="@+id/ib_fm_top_back"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@mipmap/ic_back"
            app:layout_auto_basewidth="height" />
        <!--标题-->
        <TextView
            android:id="@+id/tv_fm_top_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x88"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/x500"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="@dimen/tv_36px"
            app:layout_auto_basewidth="height" />


        <TextView
            android:id="@+id/tv_fm_top_title_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x88"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:textColor="#000"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_auto_basewidth="height" />

        <!--分享按钮-->
        <ImageButton
            android:id="@+id/ib_fm_top_right"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/x88"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            app:layout_auto_basewidth="height" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

</LinearLayout>