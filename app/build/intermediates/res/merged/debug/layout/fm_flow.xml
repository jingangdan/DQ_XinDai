<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_wight"
    android:orientation="vertical">

    <include layout="@layout/include_fm_head" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:tabIndicatorColor="#fff"
        app:tabSelectedTextColor="@color/tv_color1"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/tv_color3" />

    <com.dq.xindai.view.NoScrollViewPager
        android:background="#333"
        android:id="@+id/nvp_flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout" />

</LinearLayout>
