<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_wight"
    android:orientation="vertical"
    android:padding="@dimen/x20">

    <RelativeLayout style="@style/linMain">

        <TextView
            style="@style/textTitle"
            android:layout_centerVertical="true"
            android:text="头像" />

        <ImageView
            android:id="@+id/ivMemberHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <RelativeLayout style="@style/linMain">

        <TextView
            style="@style/textTitle"
            android:layout_alignParentLeft="true"
            android:text="姓名"
            android:textSize="@dimen/tv_28px" />

        <EditText
            android:id="@+id/etMemberName"
            style="@style/editStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="请输入真实姓名" />

    </RelativeLayout>

    <RelativeLayout style="@style/linMain">

        <TextView
            style="@style/textTitle"
            android:layout_alignParentLeft="true"
            android:text="联系电话"
            android:textSize="@dimen/tv_28px" />

        <EditText
            android:id="@+id/etMemberMobile"
            style="@style/editStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="请输入手机号码" />

    </RelativeLayout>

    <Button
        style="@style/butKuang"
        android:layout_margin="@dimen/x30"
        android:text="确认" />

</LinearLayout>
