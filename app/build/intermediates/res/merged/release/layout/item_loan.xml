<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_wight"
        android:orientation="vertical">

        <LinearLayout
            style="@style/linStyle"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:src="@mipmap/icon_home_red" />

            <TextView
                android:id="@+id/itemTvIndexSerial"
                style="@style/textTitle"
                android:text="贷款类型"
                android:textSize="@dimen/tv_28px" />

        </LinearLayout>

        <LinearLayout
            style="@style/linStyle"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/linStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textMainRed"
                    android:text="1.555%" />

                <TextView
                    style="@style/textMin"
                    android:layout_marginTop="@dimen/x10"
                    android:text="利息百分比" />


            </LinearLayout>

            <LinearLayout
                style="@style/linStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textTitle"
                    android:text="6个月" />

                <TextView
                    style="@style/textMin"
                    android:layout_marginTop="@dimen/x10"
                    android:text="最高10万 立即到账" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_color" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:src="@mipmap/ic_loan_type001" />

</FrameLayout>
