<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_wight"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginTop="@dimen/x100"
        android:background="@color/view_color" />

    <LinearLayout
        style="@style/linStyle"
        android:orientation="horizontal">

        <EditText
            style="@style/editStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_launcher"
            android:hint="请搜索账号/手机号" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="搜索"
            android:textColor="@color/textColor3" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginBottom="@dimen/x100"
        android:background="@color/view_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/linAddFriendsMenu1"
        style="@style/linStyle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:text="新的朋友"
                android:textSize="@dimen/tv_28px" />

            <TextView
                style="@style/textMin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x10"
                android:text="认识的新朋友在这里通过哦" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/linAddFriendsMenu2"
        style="@style/linStyle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:text="扫一扫"
                android:textSize="@dimen/tv_28px" />

            <TextView
                style="@style/textMin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x10"
                android:text="扫描二维码" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/linAddFriendsMenu3"
        style="@style/linStyle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/textTitle"
                android:layout_width="match_parent"
                android:text="我的名片"
                android:textSize="@dimen/tv_28px" />

            <TextView
                style="@style/textMin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x10"
                android:text="我的二维码" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

</LinearLayout>
