<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_wight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="@dimen/x25">

        <TextView
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总资产（元）" />

        <TextView
            android:id="@+id/tvMeWalletBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="32dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linMeWalletMenu1"
        style="@style/linStyle"
        android:orientation="horizontal"
        android:padding="@dimen/x25">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_wallet_recharge" />

        <TextView
            style="@style/textMain"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:text="充值" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_me_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/linMeWalletMenu2"
        style="@style/linStyle"
        android:orientation="horizontal"
        android:padding="@dimen/x25">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_wallet_withdraw" />

        <TextView
            style="@style/textMain"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:text="提现" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_me_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/linMeWalletMenu3"
        style="@style/linStyle"
        android:orientation="horizontal"
        android:padding="@dimen/x25">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_record" />

        <TextView
            style="@style/textMain"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:text="充值记录" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_me_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

    <LinearLayout
        android:id="@+id/linMeWalletMenu4"
        style="@style/linStyle"
        android:orientation="horizontal"
        android:padding="@dimen/x25">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_record" />

        <TextView
            style="@style/textMain"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"
            android:text="提现记录" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_me_next" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

</LinearLayout>
