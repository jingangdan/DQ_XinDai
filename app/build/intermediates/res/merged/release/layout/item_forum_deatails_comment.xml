<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/linStyle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_iv_forum_detail_head"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/x64"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:layout_auto_basewidth="height" />

        <LinearLayout
            style="@style/linStyle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_skill_detail_tv_name"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:text="金刚蛋"
                    android:textSize="@dimen/tv_28px" />

                <TextView
                    android:id="@+id/item_skill_detail_tv_time"
                    style="@style/textMin"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/x10"
                    android:text="家里蹲大学 长城贴瓷砖系" />

            </LinearLayout>

            <TextView
                style="@style/textMin"
                android:text="今天 12:00" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/item_skill_detail_tv_content"
        style="@style/textTitle"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x94"
        android:text="你这个夹不道子我也不知道怎弄！" />

</LinearLayout>
